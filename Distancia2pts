
#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

void main()
{
	float x1,x2,y1,y2,d;

	cout<<"Digite valores para x1,y1:"<<endl;
	cin>>x1>>y1;
	cout<<"Digite valores para x2,y2:"<<endl;
	cin>>x2>>y2;
	d=sqrt(pow(x2-x1,2)+pow(y2-y1,2));
	cout<<"La distacia entre los puntos es: "<<d<<" unidades";
	getch();
}
