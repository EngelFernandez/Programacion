#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include <string>
#define max 100

using namespace std;

void arreglo(int x,int v[]);
void posicion(int tam,int x,int v[]);

void main()
{
	int num,tam,v[max];
	cout<<"Digite el tamaÃ±o del arreglo"<<endl;
	cin>>tam;
	arreglo (tam,v);
	cout<<"Digite un numero"<<endl;
	cin>>num;
	posicion(tam,num,v);
	getch();
}
void arreglo(int x,int v[])
{
	cout<<"ingrese valores para el arreglo"<<endl;
	for (int i=0;i<x;i++)
	{
		cout<<"vector ["<<i<<"] : ";
		cin>>v[i];
	}
}
void posicion(int tam,int x,int v[])
{
	int j=0,r[max];
	for (int i=0;i<tam;i++)
	{
		if (v[i]==x)
		{
			r[j]=i;
			j++;
		}
	}
	for(int i=0;i<j;i++)
	{
		cout<<r[i]<<" ";
	}
	cout<<"son las posiciones relativas en el vector de valor "<<x<<endl;
}
